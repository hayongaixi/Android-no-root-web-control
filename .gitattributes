# Auto detect text files and perform LF normalization
* text=auto

# The above will handle all files NOT found below
# These files are text and should be normalized (Convert CRLF to LF)
*.gradle text eol=lf
*.gradle.kts text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.txt text eol=lf

# These files are binary and should be left untouched
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.apk binary
*.jar binary
*.so binary
*.a binary
*.bin binary

# Gradle wrapper
gradlew text eol=lf
gradlew.bat text eol=crlf
